@model TheThrift.Models.EditLoanAllocationVM

@{
    ViewData["Title"] = "Edit";
}

    <h1>Editing @Model.LoanType.Name Allocation for @Model.Employee.LastName,  @Model.Employee.LastName</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="EmployeeId" />

            <div class="form-group">
                <label asp-for="NumberofDays" class="control-label"></label>
                <input asp-for="NumberofDays" class="form-control" />
                <span asp-validation-for="NumberofDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary btn-block" />
            </div>
            <div>
                <a asp-action="Index" class="btn btn-outline-dark btn-block">Back to List</a>
            </div>
        </form>
    </div>
</div>



