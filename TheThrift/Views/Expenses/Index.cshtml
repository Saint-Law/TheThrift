@model IEnumerable<TheThrift.Models.ExpensesVM>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List Of All Expenses</h1>

<p>
    <a asp-action="Create" class="btn btn-success btn-sm"><i class="fa fa-plus" aria-hidden="true"></i> Add New Expenses</a>
</p>
<table id="tblData" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ExpensesType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DateOfExpenses)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descriptions)
            </th>
            
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ExpensesType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateOfExpenses)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descriptions)
            </td>          
          
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm"><i class="fa fa-pencil" aria-hidden="true"></i> Edit</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary btn-sm"><i class="fa fa-info-circle" aria-hidden="true"></i> Details</a>
                <a asp-action="Delete" asp-route-id="@item.Id" 
                   onclick="return confirm('Are you sure you want to delete this Record?')" 
                   class="btn btn-danger btn-sm"><i class="fa fa-trash" aria-hidden="true">
                         </i> Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
